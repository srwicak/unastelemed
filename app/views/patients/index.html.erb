<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Daftar Pasien</h1>
      <p class="mt-2 text-sm text-gray-600">Kelola data pasien yang terdaftar di sistem</p>
    </div>

    <!-- Patients Table -->
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
      <% if @patients.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID Pasien</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal Lahir</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jenis Kelamin</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telepon</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @patients.each do |patient| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= patient.name %></div>
                  <div class="text-sm text-gray-500"><%= patient.user.email %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <code class="text-sm font-mono bg-gray-100 px-2 py-1 rounded"><%= patient.patient_identifier %></code>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= patient.date_of_birth.strftime('%d %b %Y') %> (<%= patient.age %> thn)
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= patient.gender == 'male' ? 'Laki-laki' : 'Perempuan' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= patient.phone_number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to 'Detail', patient_path(patient), class: 'text-blue-600 hover:text-blue-900 mr-3' %>
                  <%= link_to 'Riwayat', medical_history_patient_path(patient), class: 'text-green-600 hover:text-green-900' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <!-- Pagination -->
        <% if @patients.respond_to?(:total_pages) %>
          <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <%= paginate @patients %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Tidak ada pasien</h3>
          <p class="mt-1 text-sm text-gray-500">Belum ada pasien terdaftar di sistem</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
