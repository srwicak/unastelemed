<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Dashboard Pasien</h1>
          <p class="mt-1 text-sm text-gray-600">Selamat datang, <span class="font-semibold text-blue-600"><%= @patient.name %></span></p>
        </div>
        <%= link_to logout_path, method: :delete, data: { turbo_method: :delete }, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Keluar
        <% end %>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Pemeriksaan</p>
            <p class="text-2xl font-bold text-gray-900"><%= @my_sessions.count %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Hasil Selesai</p>
            <p class="text-2xl font-bold text-gray-900"><%= @completed_sessions.count %></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-500">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-yellow-100 rounded-lg p-3">
            <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Sedang Diproses</p>
            <p class="text-2xl font-bold text-gray-900"><%= @pending_sessions.count %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Sesi Aktif -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-yellow-500 to-orange-500 px-6 py-4">
          <h2 class="text-xl font-bold text-white">Sesi Aktif</h2>
        </div>
        <div class="p-6">
          <% if @pending_sessions.any? %>
            <div class="space-y-4">
              <% @pending_sessions.limit(3).each do |session| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-900"><%= session.created_at.strftime('%d %b %Y %H:%M') %></span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Aktif
                    </span>
                  </div>
                  <% if session.notes.present? %>
                    <p class="text-sm text-gray-600 mb-3"><%= session.notes %></p>
                  <% end %>
                  <% if session.recordings.any? %>
                    <div class="flex items-center text-sm text-blue-600">
                      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Data sudah diunggah - Menunggu interpretasi dokter
                    </div>
                  <% else %>
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="animate-spin h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                      Menunggu pengunggahan data
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">Tidak Ada Sesi Aktif</h3>
              <p class="mt-1 text-sm text-gray-500">Hubungi perawat untuk memulai pemeriksaan</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Hasil Pemeriksaan Terbaru -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-green-500 to-teal-500 px-6 py-4">
          <h2 class="text-xl font-bold text-white">Hasil Pemeriksaan Terbaru</h2>
        </div>
        <div class="p-6">
          <% if @completed_sessions.any? %>
            <div class="space-y-4">
              <% @completed_sessions.limit(3).each do |session| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-900"><%= session.created_at.strftime('%d %b %Y') %></span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Selesai
                    </span>
                  </div>
                  <% if session.interpretation_completed? && session.diagnosis.present? %>
                    <div class="bg-blue-50 rounded-lg p-3 mb-3">
                      <p class="text-xs font-medium text-blue-900 mb-1">Diagnosis:</p>
                      <p class="text-sm text-blue-800"><%= session.diagnosis %></p>
                    </div>
                  <% end %>
                  <% if session.medical_staff %>
                    <p class="text-xs text-gray-500 mb-3">
                      <svg class="inline h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      Dr. <%= session.medical_staff.name %>
                    </p>
                  <% end %>
                  <% if session.recordings.any? %>
                    <%= link_to view_recording_path(session.recordings.first.session_id), 
                        class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-800" do %>
                      Lihat Detail
                      <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">Belum Ada Hasil</h3>
              <p class="mt-1 text-sm text-gray-500">Hasil pemeriksaan akan muncul di sini</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Latest Interpretation (Full Width) -->
    <% if @latest_interpretation %>
      <div class="mt-8 bg-white rounded-xl shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-purple-500 to-pink-500 px-6 py-4">
          <h2 class="text-xl font-bold text-white">Interpretasi Terbaru</h2>
        </div>
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= @latest_interpretation.created_at.strftime('%d %B %Y') %></h3>
              <% if @latest_interpretation.medical_staff %>
                <p class="text-sm text-gray-600">Dr. <%= @latest_interpretation.medical_staff.name %></p>
              <% end %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% if @latest_interpretation.diagnosis.present? %>
              <div class="bg-red-50 rounded-lg p-4">
                <h4 class="text-sm font-bold text-red-900 mb-2 flex items-center">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Diagnosis
                </h4>
                <p class="text-sm text-red-800"><%= @latest_interpretation.diagnosis %></p>
              </div>
            <% end %>

            <% if @latest_interpretation.doctor_notes.present? %>
              <div class="bg-blue-50 rounded-lg p-4">
                <h4 class="text-sm font-bold text-blue-900 mb-2 flex items-center">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Catatan Dokter
                </h4>
                <p class="text-sm text-blue-800"><%= @latest_interpretation.doctor_notes %></p>
              </div>
            <% end %>

            <% if @latest_interpretation.recommendations.present? %>
              <div class="bg-green-50 rounded-lg p-4">
                <h4 class="text-sm font-bold text-green-900 mb-2 flex items-center">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                  Rekomendasi
                </h4>
                <p class="text-sm text-green-800"><%= @latest_interpretation.recommendations %></p>
              </div>
            <% end %>
          </div>

          <% if @latest_interpretation.recordings.any? %>
            <div class="mt-6 flex justify-end">
              <%= link_to view_recording_path(@latest_interpretation.recordings.first.session_id), 
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700" do %>
                Lihat Detail Lengkap
                <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <div class="dashboard-header">
    <h1 class="dashboard-title">Dashboard Pasien</h1>
    <p class="dashboard-subtitle">Selamat datang, <%= @patient.name %></p>
  </div>

  <div class="dashboard-grid">
    <div class="dashboard-section">
      <h2 class="section-title">Hasil Pemeriksaan Terbaru</h2>
      <% if @completed_sessions.any? %>
        <% @completed_sessions.each do |session| %>
          <div class="result-card">
            <div class="result-header">
              <h3><%= session.created_at.strftime('%d %B %Y') %></h3>
              <span class="result-time"><%= session.created_at.strftime('%H:%M') %></span>
            </div>
            
            <% if session.interpretation_completed? %>
              <div class="interpretation-summary">
                <h4>Interpretasi Dokter</h4>
                <% if session.medical_staff %>
                  <p class="doctor-info">Dr. <%= session.medical_staff.name %></p>
                <% end %>
                
                <% if session.diagnosis.present? %>
                  <div class="diagnosis">
                    <strong>Diagnosis:</strong>
                    <p><%= session.diagnosis %></p>
                  </div>
                <% end %>
                
                <% if session.doctor_notes.present? %>
                  <div class="notes">
                    <strong>Catatan:</strong>
                    <p><%= session.doctor_notes %></p>
                  </div>
                <% end %>
                
                <% if session.recommendations.present? %>
                  <div class="recommendations">
                    <strong>Rekomendasi:</strong>
                    <p><%= session.recommendations %></p>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="waiting-interpretation">
                <p>Hasil pemeriksaan Anda sedang dalam proses interpretasi oleh dokter.</p>
                <span class="status-badge processing">Dalam Proses</span>
              </div>
            <% end %>
            
            <div class="result-actions">
              <%= link_to "Lihat Detail Grafik", view_recording_path(session.recordings.first.session_id), 
                  class: "btn btn-primary" %>
              <% if session.interpretation_completed? %>
                <%= link_to "Unduh PDF", "#", class: "btn btn-outline" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">üìã</div>
          <h3>Belum Ada Hasil Pemeriksaan</h3>
          <p>Anda belum memiliki hasil pemeriksaan yang selesai.</p>
          <p class="help-text">Silakan hubungi perawat untuk memulai sesi pemeriksaan.</p>
        </div>
      <% end %>
    </div>

    <div class="dashboard-section">
      <h2 class="section-title">Sesi Aktif</h2>
      <% if @pending_sessions.any? %>
        <div class="active-sessions">
          <% @pending_sessions.each do |session| %>
            <div class="session-card active">
              <div class="session-header">
                <h3><%= session.created_at.strftime('%d %b %Y %H:%M') %></h3>
                <span class="status-badge active">Aktif</span>
              </div>
              <div class="session-info">
                <p><strong>Kode Sesi:</strong> <%= session.qr_code&.code %></p>
                <% if session.notes.present? %>
                  <p><strong>Catatan:</strong> <%= session.notes %></p>
                <% end %>
              </div>
              <div class="session-status">
                <% if session.recordings.any? %>
                  <p class="recording-info">Data sudah diunggah - Menunggu interpretasi dokter</p>
                <% else %>
                  <p class="recording-info">Menunggu pengunggahan data dari aplikasi mobile</p>
                <% end %>
              </div>
              <div class="session-actions">
                <% if session.recordings.any? %>
                  <%= link_to "Lihat Data", view_recording_path(session.recordings.first.session_id), 
                      class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">‚è≥</div>
          <h3>Tidak Ada Sesi Aktif</h3>
          <p>Anda tidak memiliki sesi pemeriksaan yang sedang berlangsung.</p>
        </div>
      <% end %>
    </div>
  </div>

  <% if @latest_interpretation %>
    <div class="dashboard-section">
      <h2 class="section-title">Interpretasi Terbaru</h2>
      <div class="latest-interpretation">
        <div class="interpretation-card">
          <div class="interpretation-header">
            <h3><%= @latest_interpretation.created_at.strftime('%d %B %Y') %></h3>
            <% if @latest_interpretation.medical_staff %>
              <span class="doctor-name">Dr. <%= @latest_interpretation.medical_staff.name %></span>
            <% end %>
          </div>
          <div class="interpretation-content">
            <% if @latest_interpretation.diagnosis.present? %>
              <div class="diagnosis">
                <strong>Diagnosis:</strong>
                <p><%= @latest_interpretation.diagnosis %></p>
              </div>
            <% end %>
            
            <% if @latest_interpretation.doctor_notes.present? %>
              <div class="notes">
                <strong>Catatan Dokter:</strong>
                <p><%= @latest_interpretation.doctor_notes %></p>
              </div>
            <% end %>
            
            <% if @latest_interpretation.recommendations.present? %>
              <div class="recommendations">
                <strong>Rekomendasi:</strong>
                <p><%= @latest_interpretation.recommendations %></p>
              </div>
            <% end %>
          </div>
          <div class="interpretation-actions">
            <%= link_to "Lihat Detail", view_recording_path(@latest_interpretation.recordings.first.session_id), 
                class: "btn btn-primary" %>
            <%= link_to "Lihat Semua", "#", class: "btn btn-outline" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
.result-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  border-left: 4px solid #4CAF50;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.result-header h3 {
  color: #2c3e50;
  margin: 0;
}

.result-time {
  color: #7f8c8d;
  font-size: 14px;
}

.interpretation-summary {
  background: #f8f9fa;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 16px;
}

.interpretation-summary h4 {
  color: #2c3e50;
  margin-bottom: 12px;
}

.doctor-info {
  color: #3498db;
  font-weight: 500;
  margin-bottom: 12px;
}

.diagnosis, .notes, .recommendations {
  margin-bottom: 12px;
}

.diagnosis strong, .notes strong, .recommendations strong {
  color: #2c3e50;
  display: block;
  margin-bottom: 4px;
}

.waiting-interpretation {
  text-align: center;
  padding: 20px;
  background: #fff3cd;
  border-radius: 8px;
  margin-bottom: 16px;
}

.empty-state {
  text-align: center;
  padding: 40px 20px;
  background: #f8f9fa;
  border-radius: 12px;
  border: 2px dashed #dee2e6;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
}

.empty-state h3 {
  color: #6c757d;
  margin-bottom: 8px;
}

.help-text {
  color: #6c757d;
  font-size: 14px;
  margin-top: 8px;
}

.status-badge.processing {
  background: #ffc107;
  color: #212529;
}

.session-card.active {
  border-left-color: #007bff;
}

.recording-info {
  background: #e3f2fd;
  padding: 8px 12px;
  border-radius: 6px;
  color: #1976d2;
  font-size: 14px;
  margin: 12px 0;
}
</style>