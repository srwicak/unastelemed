<div class="dashboard-container">
  <div class="dashboard-header">
    <h1 class="dashboard-title">Dashboard Superuser</h1>
    <p class="dashboard-subtitle">Selamat datang, <%= current_user.name %></p>
  </div>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üè•</div>
      <div class="stat-content">
        <h3><%= @total_hospitals %></h3>
        <p>Total Rumah Sakit</p>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üë•</div>
      <div class="stat-content">
        <h3><%= @total_users %></h3>
        <p>Total Users</p>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üëî</div>
      <div class="stat-content">
        <h3><%= @total_managers %></h3>
        <p>Hospital Managers</p>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">‚öïÔ∏è</div>
      <div class="stat-content">
        <h3><%= @total_staff %></h3>
        <p>Dokter & Perawat</p>
      </div>
    </div>
  </div>

  <div class="dashboard-grid">
    <!-- Quick Actions -->
    <div class="dashboard-section full-width">
      <h2 class="section-title">Aksi Cepat</h2>
      <div class="action-cards-wide">
        <%= link_to new_hospital_path, class: "action-card-big" do %>
          <div class="action-icon">
            <i class="fas fa-hospital text-5xl text-blue-600"></i>
          </div>
          <div class="action-content">
            <h3>‚ûï Daftarkan Rumah Sakit Baru</h3>
            <p>Tambahkan rumah sakit dan buat akun Hospital Manager</p>
          </div>
        <% end %>

        <%= link_to hospitals_path, class: "action-card-big" do %>
          <div class="action-icon">
            <i class="fas fa-list text-5xl text-green-600"></i>
          </div>
          <div class="action-content">
            <h3>üìã Kelola Rumah Sakit</h3>
            <p>Lihat, edit, atau hapus data rumah sakit</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Hospitals -->
    <div class="dashboard-section">
      <div class="section-header">
        <h2 class="section-title">Rumah Sakit Terbaru</h2>
        <%= link_to "Lihat Semua", hospitals_path, class: "btn btn-sm btn-outline" %>
      </div>
      <% if @recent_hospitals.any? %>
        <div class="hospitals-list">
          <% @recent_hospitals.each do |hospital| %>
            <div class="hospital-item">
              <div class="hospital-info">
                <h4><%= hospital.name %></h4>
                <p class="text-gray-600">
                  <i class="fas fa-code"></i> <%= hospital.code %> ‚Ä¢
                  <i class="fas fa-map-marker-alt"></i> <%= hospital.address&.truncate(40) %>
                </p>
                <p class="text-gray-500 text-sm">
                  <i class="fas fa-phone"></i> <%= hospital.phone %> ‚Ä¢
                  <i class="fas fa-envelope"></i> <%= hospital.email %>
                </p>
              </div>
              <div class="hospital-meta">
                <span class="badge badge-primary">
                  <%= User.where(hospital_id: hospital.id, role: 'hospital_manager').count %> Manager
                </span>
                <span class="badge badge-info">
                  <%= User.where(hospital_id: hospital.id, role: ['doctor', 'nurse']).count %> Staff
                </span>
                <small class="text-gray-500">
                  <%= hospital.created_at.strftime('%d %b %Y') %>
                </small>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="no-data">Belum ada rumah sakit terdaftar.</p>
        <div class="empty-state">
          <i class="fas fa-hospital text-6xl text-gray-300 mb-3"></i>
          <p>Mulai dengan mendaftarkan rumah sakit pertama!</p>
          <%= link_to "Daftarkan Rumah Sakit", new_hospital_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <!-- Recent Users -->
    <div class="dashboard-section">
      <div class="section-header">
        <h2 class="section-title">User Terbaru</h2>
      </div>
      <% if @recent_users.any? %>
        <div class="users-table">
          <table class="data-table">
            <thead>
              <tr>
                <th>Nama</th>
                <th>Role</th>
                <th>Rumah Sakit</th>
                <th>Tanggal</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_users.each do |user| %>
                <tr>
                  <td>
                    <strong><%= user.name %></strong><br>
                    <small class="text-gray-600"><%= user.email %></small>
                  </td>
                  <td>
                    <% if user.superuser? %>
                      <span class="badge badge-danger">Superuser</span>
                    <% elsif user.hospital_manager? %>
                      <span class="badge badge-warning">Manager</span>
                    <% elsif user.doctor? %>
                      <span class="badge badge-primary">Dokter</span>
                    <% elsif user.nurse? %>
                      <span class="badge badge-info">Perawat</span>
                    <% else %>
                      <span class="badge badge-secondary">Pasien</span>
                    <% end %>
                  </td>
                  <td><%= user.hospital&.name || '-' %></td>
                  <td><%= user.created_at.strftime('%d %b %Y') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="no-data">Belum ada user terdaftar.</p>
      <% end %>
    </div>
  </div>
</div>

